{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "es6", "dom.iterable", "scripthost"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "noImplicitAny": true
    },
    "include": ["src/**/*"]
}
